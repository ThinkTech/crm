<module>
  <name>dashboard</name>
  <url>dashboard</url>
  <type>back-end</type>
  <actions>
    <action url="customers" page="customers" method="showCustomers" script="customers"/>
    <action url="customers/info"  method="getCustomerInfo" script="customers"/>
    <action url="projects" page="projects" method="showProjects" script="projects"/>
    <action url="projects/open"  method="openProject" script="projects"/>
    <action url="projects/info"  method="getProjectInfo" script="projects"/>
    <action url="projects/documents/save"  method="saveDocuments" script="projects"/>
    <action url="projects/documents/download"  method="downloadDocument" script="projects"/>
    <action url="projects/description/update"  method="updateProjectDescription" script="projects"/>
    <action url="projects/comments/create"  method="addComment" script="projects"/>
    <action url="projects/priority/update"  method="updateProjectPriority" script="projects"/>
    <action url="projects/tasks/update"  method="updateTask" script="projects"/>
    <action url="projects/tasks/open"  method="openTask" script="projects"/>
    <action url="domains"  page="domains" method="showDomains" script="domains"/>
    <action url="domains/info"  method="getDomainInfo" script="domains"/>
    <action url="domains/register"  method="registerDomain" script="domains"/>
     <action url="domains/createMailAccount"  method="createMailAccount" script="domains"/>
    <action url="domains/activateMailOffer"  method="activateMailOffer" script="domains"/>
    <action url="support"  page="support" method="showTickets" script="support"/>
    <action url="support/tickets/open"  method="openTicket" script="support"/>
    <action url="support/tickets/info"  method="getTicketInfo" script="support"/>
    <action url="support/tickets/comment"  method="addTicketComment" script="support"/>
    <action url="support/tickets/close"  method="closeTicket" script="support"/>
    <action url="tickets/priority/update"  method="updateTicketPriority" script="support"/>
    <action url="tickets/progression/update"  method="updateTicketProgression" script="support"/>
    <action url="billing"  page="billing" method="showBills" script="billing"/>
    <action url="billing/info"  method="getBillInfo" script="billing"/>
  </actions>
  
  <menus>
	<menu name="main">
		<menuItem label="Dashboard" icon="television"/>
		<menuItem label="Vos Domaines" url="domains" icon="globe"/>
		<menuItem label="Vos Projets" url="projects" icon="briefcase"/>
		<menuItem label="Vos Clients" url="customers" icon="address-book"/>
		<menuItem label="Assistance" url="support" icon="question-circle-o"/>
		<menuItem label="Facturation" url="billing" icon="money"/>
	</menu>
  </menus>
  
</module>